<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>iPhone Accessories</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <!-- font link -->
    <link href="https://fonts.cdnfonts.com/css/minimo" rel="stylesheet">
    <link rel="stylesheet" href="../style.css">
    <link rel="stylesheet" href="/output.css">
</head>
<body class="bg-[#0a0a0a] text-[#f3f3f3] font-sans">
  <!-- Homepage-style overlay menu -->
  <div class="menu h-[100vh] fixed top-0 right-0 z-[9999] bg-gradient-to-b from-gray-700 to-black w-full hidden justify-around text-white transform translate-x-full transition-transform duration-300">
      <div class="flex flex-col gap-6 justify-around h-[100%]">
          <i class="close-icon ri-close-line cursor-pointer text-5xl"></i>
          <div class="flex flex-col gap-4 mt-10 text-2xl">
              <a class="text-[#D1CEB2]" href="/">Home</a>
              <a href="/All_Products">All Products</a>
              <a href="/Accessories">Accessories</a>
              <a href="/Support">Support</a>
              <a href="#">Gallery</a>
          </div>
          <h1 class="relative text-5xl bottom-5">Designed to be loved.</h1>
      </div>
      <div>
          <img src="/picsss/abhijeet-barak-44qLAVHJsco-unsplash.jpg" class="w-[100%] h-full" alt="photo">
      </div>
  </div>
  <!-- Overlay backdrop -->
  <div class="menu-overlay fixed inset-0 bg-black/50 z-[9998] hidden"></div>
  <div class="w-full max-w-[1160px] mx-auto px-6">

    <!-- Heading row with icon aligned -->
    <div class="flex items-center justify-between pt-10 mb-12">
      <h1 class="font-bold tracking-wide leading-tight text-[clamp(2.2rem,4vw+1rem,3.2rem)] m-0">iPhone Accessories</h1>
      <i id="menuTrigger" class="ri-menu-line text-white text-3xl cursor-pointer"></i>
    </div>

    <!-- Products -->
    <div class="grid gap-16">

      <!-- AirPods Pro 2 -->
      <div class="bg-gradient-to-b from-white/5 to-transparent rounded-2xl shadow-[0_0_0_3px_rgba(255,255,255,0.08)] transition-transform hover:-translate-y-1 p-8 md:p-12">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Image -->
          <div class="flex justify-center">
            <img src="../picsss/Accessories/unsplash_cACbhCdH5wQ.png" 
                 alt="AirPods Pro 2" 
                 class="max-h-64 object-contain bg-[#0b0b0b] rounded-xl drop-shadow-[0_12px_24px_rgba(0,0,0,0.45)]">
          </div>
          <!-- Text -->
          <div>
            <h2 class="text-[clamp(1.4rem,.8rem+2vw,2rem)] font-bold mb-2">AirPods Pro 2</h2>
            <p class="text-[#c7c7c7] text-[.975rem] mb-4">
              From ₹2168.00/mo. Per Month with instant cashback and EMI<br />
              or<br />
              MRP ₹24900.00 (Incl. of all taxes)
            </p>
            <button class="inline-flex items-center gap-2 px-5 py-2 font-bold bg-[#e5e5e5] text-[#111] rounded-full transition hover:bg-white hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-white/25">
              BUY
            </button>
          </div>
        </div>
      </div>

      <!-- iPhone 16 Pro Max Case -->
      <div class="bg-gradient-to-b from-white/5 to-transparent rounded-2xl shadow-[0_0_0_3px_rgba(255,255,255,0.08)] transition-transform hover:-translate-y-1 p-8 md:p-12">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Image -->
          <div class="flex justify-center order-none md:order-2">
            <img src="../picsss/Accessories/Capture-removebg-preview 1.png" 
                 alt="iPhone 16 Pro Max Case" 
                 class="max-h-64 object-contain bg-[#0b0b0b] rounded-xl drop-shadow-[0_12px_24px_rgba(0,0,0,0.45)]">
          </div>
          <!-- Text -->
          <div>
            <h2 class="text-[clamp(1.4rem,.8rem+2vw,2rem)] font-bold mb-2">
              iPhone 16 Pro Max<br>Clear Case
            </h2>
            <p class="text-[#c7c7c7] text-[.975rem] mb-4">
              with MagSafe<br><br>
              From ₹445.00/mo. Per Month with EMI<br />
              or<br />
              MRP ₹4900.00 (Incl. of all taxes)
            </p>
            <button class="inline-flex items-center gap-2 px-5 py-2 font-bold bg-[#e5e5e5] text-[#111] rounded-full transition hover:bg-white hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-white/25">
              BUY
            </button>
          </div>
        </div>
      </div>

      <!-- MagSafe Charger -->
      <div class="bg-gradient-to-b from-white/5 to-transparent rounded-2xl shadow-[0_0_0_3px_rgba(255,255,255,0.08)] transition-transform hover:-translate-y-1 p-8 md:p-12">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <!-- Image -->
          <div class="flex justify-center">
            <img src="../picsss/Accessories/hdg-removebg-preview 1.png" 
                 alt="Apple MagSafe Charger" 
                 class="max-h-64 object-contain bg-[#0b0b0b] rounded-xl drop-shadow-[0_12px_24px_rgba(0,0,0,0.45)]">
          </div>
          <!-- Text -->
          <div>
            <h2 class="text-[clamp(1.4rem,.8rem+2vw,2rem)] font-bold mb-2">Apple MagSafe Charger</h2>
            <p class="text-[#c7c7c7] text-[.975rem] mb-4">
              From ₹450.00/mo. Per Month with EMI<br />
              or<br />
              MRP ₹4999.00 (Incl. of all taxes)
            </p>
            <button class="inline-flex items-center gap-2 px-5 py-2 font-bold bg-[#e5e5e5] text-[#111] rounded-full transition hover:bg-white hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-white/25">
              BUY
            </button>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- More Button -->
  <div class="flex justify-center py-16">
    <a href="http://localhost:3000/All_Accessories"><button class="px-6 py-3 font-bold bg-[#1a1a1a] border border-[#2c2c2c] text-white rounded-full transition hover:bg-[#222] hover:-translate-y-0.5 focus:outline-none focus:ring-2 focus:ring-white/25">
      More
    </button></a>
  </div>
  <script>
    // Overlay menu toggle (slide from right)
    (function(){
      const menu = document.querySelector('.menu');
      const overlay = document.querySelector('.menu-overlay');
      const menuIcon = document.getElementById('menuTrigger');
      const closeIcon = document.querySelector('.close-icon');
      const open = () => { menu.classList.remove('hidden','translate-x-full','translate-x-[-100%]'); menu.classList.add('flex','translate-x-0'); overlay.classList.remove('hidden'); };
      const close = () => { menu.classList.remove('translate-x-0'); menu.classList.add('translate-x-full'); overlay.classList.add('hidden'); };
      menuIcon && menuIcon.addEventListener('click', open);
      closeIcon && closeIcon.addEventListener('click', close);
      overlay && overlay.addEventListener('click', close);
    })();
  </script>
</body>
</html>
